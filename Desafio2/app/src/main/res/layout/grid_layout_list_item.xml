<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/_image"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/tony_romas" />

        <TextView
            android:id="@+id/_TonyRomas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/_image"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:text="Tony Roma's"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/_plates"
            android:layout_below="@id/_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"
            android:text="Pratos principais"
            android:textSize="30sp" />

        <ImageView
            android:layout_below="@id/_plates"
            android:id="@+id/recipes"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/aoyama_moema"/>

        <TextView
            android:id="@+id/_textRecipe"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipes"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Salada com molho Gengibre"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_below="@id/_plates"
            android:id="@+id/recipes2"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="230dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/aoyama_moema"/>

        <TextView
            android:id="@+id/_textRecipe2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipes"
            android:layout_marginLeft="230dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Salada com molho Gengibre"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_below="@id/_plates"
            android:id="@+id/recipes3"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/aoyama_moema"/>

        <TextView
            android:id="@+id/_textRecipe3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipes3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Salada com molho Gengibre"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_below="@id/_plates"
            android:id="@+id/recipes4"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="230dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/aoyama_moema"/>

        <TextView
            android:id="@+id/_textRecipe4"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipes4"
            android:layout_marginLeft="230dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Salada com molho Gengibre"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>